{
  "name": "@leva-ui/root",
  "version": "0.0.1",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*",
    "demo"
  ],
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "postinstall": "husky install && preconstruct dev",
    "build": "preconstruct build",
    "watch": "preconstruct watch",
    "dev": "preconstruct dev",
    "lint": "pretty-quick --staged",
    "lint:full": "eslint packages/*/src",
    "ci:version": "pnpm changeset version",
    "ci:release": "pnpm build && pnpm changeset publish",
    "validate": "preconstruct validate",
    "tsc": "tsc --noEmit",
    "size": "pnpm size-limit",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook --quiet",
    "demo:dev": "pnpm --filter demo dev",
    "demo:build": "pnpm --filter demo build",
    "demo:serve": "pnpm --filter demo serve",
    "prepare": "husky install",
    "prettier": "prettier --check .",
    "manypkg:check": "manypkg check",
    "manypkg:fix": "manypkg fix"
  },
  "size-limit": [
    {
      "name": "Leva",
      "limit": "3s",
      "path": "packages/leva/dist/leva.*.prod.js"
    },
    {
      "name": "Leva Plugin Spring",
      "limit": "3s",
      "path": "packages/plugin-spring/dist/leva-ui-plugin-spring.*.prod.js"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/pmndrs/leva.git"
  },
  "bugs": "https://github.com/pmndrs/leva/issues",
  "prettier": {
    "bracketSameLine": true,
    "semi": false,
    "trailingComma": "es5",
    "singleQuote": true,
    "tabWidth": 2,
    "printWidth": 120
  },
  "dependencies": {
    "@babel/core": "^7.17.9",
    "@babel/eslint-parser": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@changesets/cli": "^2.22.0",
    "@manypkg/cli": "^0.19.1",
    "@preconstruct/cli": "^2.1.5",
    "@radix-ui/react-icons": "^1.0.3",
    "@storybook/addon-actions": "^6.4.18",
    "@storybook/addon-essentials": "^6.4.18",
    "@storybook/addon-links": "^6.4.18",
    "@storybook/addon-storysource": "^6.4.18",
    "@storybook/react": "^6.4.18",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "all-contributors-cli": "^6.20.0",
    "eslint": "^8.14.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.4.0",
    "husky": "^7.0.4",
    "patch-package": "^6.4.7",
    "postinstall-postinstall": "^2.1.0",
    "prettier": "^2.6.2",
    "pretty-quick": "^3.1.3",
    "start-server-and-test": "^1.14.0",
    "tsd": "^0.20.0",
    "typescript": "^4.6.3"
  }
}
